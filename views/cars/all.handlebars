<form action="/cars/all" method="GET">
  <input type="text" name="search" />
  <input type="submit" value="Search" />
</form>

{{#each cars}}
<div class="mb-60 car-details">
  <h2>{{this.make}} {{this.model}} ({{this.year}})</h2>
  <h3>{{this.pricePerDay}} BGN / day</h3>
  <img src="{{this.image}}" alt="{{this.make}} {{this.model}}"> {{#if this.power}}
  <h3>{{this.power}}</h3>
  {{/if}} 
  
  {{#if ../currentUser}}
  <form action="/cars/rent/{{this._id}}" method="POST">
    <select name="days" id="days">
      <option value="1">1</option>
      <option value="2">2</option>
      <option value="3">3</option>
      <option value="4">4</option>
      <option value="5">5</option>
      <option value="6">6</option>
      <option value="7">7</option>      
    </select>
    <input type="submit" value="Rent" />
  </form>
  {{/if}}
</div>

{{else}}


<h2>No cars available! {{/each}}

  <div class="font-3x">
    {{#if hasPrevPage}}
    <a href="/cars/all?page={{prevPage}}&search={{search}}">&lt;&lt;</a> {{/if}} &nbsp;&nbsp;&nbsp; {{#if hasNextPage}}
    <a href="/cars/all?page={{nextPage}}&search={{search}}">&gt;&gt;</a> {{/if}}
  </div>